<% include ../partials/header %>
<div class="container">
     <h1 style="text-align: center;">Edit <%= venue.name %></h1>
    
    
<div style="width: 40%; margin: 25px auto;">
      <form action="/venues/<%= venue._id %>?_method=PUT" method="POST">
          <div class="form-group">
              <input class="form-control" type="text" name="venue[name]" value="<%= venue.name %>">
          </div>
          <div class="form-group">
              <input class="form-control" type="number" name="venue[price]" value="<%= venue.price %>" min="10" step="5">
          </div>
          <div class="form-group">
              <input class="form-control" type="text" name="venue[image]" value="<%= venue.image %>">
          </div>
          
          <div class="form-group">
              <input class="form-control" type="text" name="venue[address]" value="<%= venue.address %>">
          </div>
          
          <div class="form-group">
              <button class="btn btn-lg btn-primary btn-block">Submit!</button>
          </div>
    </form>
    <a href="/venues">Back to Venues</a>
</div>
  
    
    
</div>
   
    <% include ../partials/footer %>