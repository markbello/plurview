<% include ../partials/header %>

<div class="container">
    <div class="row">
        
        <div class="col-md-3">
            <p class="lead">PLURview</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        
        <div class="col-md-9">
            <div class="thumbnail"><img class="img-responsive" src="<%= venue.image %>">
                <div class="caption-full">
                    <h4 class="pull-right">$<%= venue.price %>/General Admission</h4>
                    <h4><a href="#"><%= venue.name %></a></h4>
                    <p><%= venue.address %></p>
                    <p><em>Added by <%= venue.author.username %></em></p>
                    <% if(currentUser && venue.author.id.equals(currentUser._id)){ %>
                        <a class="btn btn-warning" href="/venues/<%= venue._id %>/edit">Edit Venue</a>
                        <form class="delete-form" action="/venues/<%= venue._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    <% }; %>
                </div>
            </div>
            
            
            
    </div>
</div>
    


<% include ../partials/footer %>

