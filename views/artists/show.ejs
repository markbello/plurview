<% include ../partials/header %>

<div class="container">
    <div class="row">
        
        <div class="col-md-3">
            <p class="lead">PLURview</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        
        <div class="col-md-9">
            <div class="thumbnail"><img class="img-responsive" src="<%= artist.logo %>">
                <div class="caption-full">
                    
                    <h4><a href="#"><%= artist.name %></a></h4>
                    <p><%= artist.blurb %></p>
                    <p><em>Added by <%= artist.author.username %></em></p>
                    <% if(currentUser && artist.author.id.equals(currentUser._id)){ %>
                        <a class="btn btn-warning" href="/artists/<%= artist._id %>/edit">Edit Artist</a>
                        <form class="delete-form" action="/artists/<%= artist._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    <% }; %>
                </div>
            </div>
            
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/artists/<%= artist._id %>/comments/new">Add comment</a>
                    <hr>
                </div>
                
                <% artist.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username %></strong>
                            <span class="pull-right">10 days ago</span>
                            <p><%= comment.text %></p>
                            <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                                <a class="btn btn-xs btn-warning" href="/artists/<%= artist._id %>/comments/<%= comment._id %>/edit">
                                    Edit
                                </a>
                                <form class="delete-form" action="/artists/<%= artist._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
                                    <input type="submit" class="btn btn-xs btn-danger " value="Delete" >
                                </form>
                            <% }; %>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
            
    </div>
</div>
    


<% include ../partials/footer %>

