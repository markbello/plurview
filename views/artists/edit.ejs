<% include ../partials/header %>
<div class="container">
     <h1 style="text-align: center;">Edit <%= artist.name %></h1>
    
    
<div style="width: 40%; margin: 25px auto;">
      <form action="/artists/<%= artist._id %>?_method=PUT" method="POST">
          <div class="form-group">
              <input class="form-control" type="text" name="artist[name]" value="<%= artist.name %>">
          </div>
          
          <div class="form-group">
              <input class="form-control" type="text" name="artist[logo]" value="<%= artist.logo %>">
          </div>
          
          <div class="form-group">
              <input class="form-control" type="text" name="artist[blurb]" value="<%= artist.blurb %>">
          </div>
          
          <div class="form-group">
              <button class="btn btn-lg btn-primary btn-block">Submit!</button>
          </div>
    </form>
    <a href="/artists">Back to Artists</a>
</div>
  
    
    
</div>
   
    <% include ../partials/footer %>